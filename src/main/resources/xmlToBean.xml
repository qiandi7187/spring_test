<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">



    <bean id="car" class="com.example.xml.Car"/>
    <bean id="carService"  class="com.example.xml.CarService" >
        <!--给构造函数传递参数，没有的话则调用默认构造方法  -->
        <constructor-arg ref="car"/>
    </bean>



    <bean id="tank" class="com.example.xml.Tank"/>
    <bean id="tankService" class="com.example.xml.TankService">
        <!-- 配置属性 -->
        <property name="moveable" ref="tank"/>
    </bean>



    </beans>